{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "audioground",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "python3",
            "cmd": "python3",
            "args": true
          },
          {
            "name": "python",
            "cmd": ".venv/bin/python",
            "args": true
          },
          {
            "name": "pip",
            "cmd": ".venv/bin/pip",
            "args": true
          },
          {
            "name": "sh",
            "cmd": "sh",
            "args": true
          }
        ]
      }
    },
    "windows": [
      {
        "title": "audioground",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "resources": ["python/*.*", "python/models/*.json"],
      "identifier": "com.audioground.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
