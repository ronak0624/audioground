{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "audioground",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "confirm": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": true
      },
      "path": {
        "all": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://127.0.0.1:8012/*"]
      },
      "fs": {
        "all": false,
        "writeFile": true,
        "scope": ["$RESOURCE/*"]
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "shell": {
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "python3",
            "cmd": "python3",
            "args": true
          },
          {
            "name": "python",
            "cmd": ".venv/bin/python",
            "args": true
          },
          {
            "name": "pip",
            "cmd": ".venv/bin/pip",
            "args": true
          },
          {
            "name": "sh",
            "cmd": "sh",
            "args": true
          }
        ]
      }
    },
    "windows": [
      {
        "height": 720,
        "resizable": true,
        "decorations": false,
        "title": "Audioground",
        "transparent": true,
        "width": 1280
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": ["style-src"],
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: http://asset.localhost blob:; font-src 'self' data: https://fonts.gstatic.com; child-src 'self'"
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "targets": "all",
      "resources": ["python/*.*", "python/models/*.json"],
      "identifier": "com.audioground.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    }
  }
}
